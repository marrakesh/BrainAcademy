
@model List<AirportPanelApplication.Models.Enteties.Flight>
@using AirportPanelApplication.Models.Enteties

@{
    ViewBag.Title = "Arrival/Departure";
}


<div class="divider">
    @{
        <table class="table table-hover table-condensed table-responsive table-bordered border-shadow">
            <thead>
            <tr>
                <h1>Arrivals</h1></tr>
            <tr>
                <th>Flight number</th>
                <th>Origin</th>
                <th>Destination</th>
                <th>Departure time</th>
                <th>Arrival time</th>
                <th>Terminal</th>
                <th>Flight status</th>
            </tr>
            </thead>

            @foreach (var flight in Model.Where(f => f.Direction == Direction.Arrivals))
            {
                <tbody>
                <td>@Html.ActionLink(@flight.FlightNumber, "Details", "Flight", new { id = @flight.Id }, new { @class = "label label-default" })</td>
                <td>@flight.Origin</td>
                <td>@flight.Destination</td>
                <td>@flight.DepartureTime</td>
                <td>@flight.ArrivalTime</td>
                <td>@flight.Terminal</td>
                <td>@flight.FlightStatus</td>
                </tbody>
            }

        </table>
    }
</div>

<div class="divider">
    @{
        <table class="table table-hover table-condensed table-bordered border-shadow">
            <thead>
                <tr>
                    <h1>Departures</h1>
                </tr>
                <tr>
                    <th>Flight Number</th>
                    <th>Origin</th>
                    <th>Destination</th>
                    <th>Departure time</th>
                    <th>Arrival time</th>
                    <th>Terminal</th>
                    <th>Flight number</th>
                </tr>
            </thead>

            @foreach (var flight in Model.Where(f => f.Direction == Direction.Departures))
            {
                <tbody>
                <td>@Html.ActionLink(@flight.FlightNumber, "Details","Flight", new {id = @flight.Id},  new { @class = "label label-default" })</td>
                <td>@flight.Origin</td>
                <td>@flight.Destination</td>
                <td>@flight.DepartureTime</td>
                <td>@flight.ArrivalTime</td>
                <td>@flight.Terminal</td>
                <td>@flight.FlightStatus</td>
                </tbody>
            }

        </table>
    }
</div>

