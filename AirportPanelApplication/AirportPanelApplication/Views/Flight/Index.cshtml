@model List<AirportPanelApplication.Models.Enteties.Flight>

@{
    ViewBag.Title = "Flight information";
}


<div>
    <h2>Flight information</h2>
    @{
        using (Html.BeginForm("Index", "Flight", FormMethod.Get))
        {
            <p>
                @Html.TextBox("searchString")
                <button type="submit" class="btn btn-default">
                    <span class="glyphicon glyphicon-search"></span> Search
                </button>
            </p>
        }
    }
</div>
<div class="divider">
    @{

        <table class="table table-hover table-condensed table-bordered border-shadow">
            <thead>
            <tr>
                <th>Flight Number</th>
                <th>Origin</th>
                <th>Destination</th>
                <th>Departure time</th>
                <th>Arrival time</th>
                <th>Terminal</th>
                <th>Flight status</th>
                <th>Manufacturer</th>
                <th>Model</th>
                <th></th>
            </tr>
            </thead>

            @foreach (var flight in Model)
            {
                <tbody>
                <td>@Html.ActionLink(@flight.FlightNumber, "Details", new {id = @flight.Id}, new {@class = "label label-default"})</td>
                <td>@flight.Origin</td>
                <td>@flight.Destination</td>
                <td>@flight.DepartureTime</td>
                <td>@flight.ArrivalTime</td>
                <td>@flight.Terminal</td>
                <td>@flight.FlightStatus</td>
                <td>@flight.Airplane.Manufacturer</td>
                <td>@flight.Airplane.Model</td>
                <td>
                    <button type="button" value="Edit" class="btn btn-primary" onclick="location.href = '@Url.Action("Update", "Flight", new {id = @flight.Id})'">
                        <span class="glyphicon glyphicon-pencil black"></span>
                    </button>
                    <button type="button" value="Delete" class="btn btn-danger" onclick="location.href='@Url.Action("Delete", "Flight", new {id = @flight.Id})'">
                        <span class="glyphicon glyphicon-trash black"></span>
                    </button>
                    @*<div class="btn"> @Html.ActionLink(" ", "Update", new {id = @flight.Id}, new {@class = "glyphicon glyphicon-pencil black btn-primary"})</div>
                    <div class="btn"> @Html.ActionLink(" ", "Delete", new {id = @flight.Id}, new {@class = "glyphicon glyphicon-trash black btn-danger"})</div>*@
                </td>

                </tbody>
            }

        </table>
        <button type="button" value="Create" class="btn btn-success" onclick="location.href='@Url.Action("Create", "Flight")'">
            <span class="glyphicon gly glyphicon-plus black" > Create</span>
        </button>
        @*<input type="button" value="Create" onclick="location.href='@Url.Action("Create", "Flight")'"  class="btn btn-success black"/>*@

    }
</div>

