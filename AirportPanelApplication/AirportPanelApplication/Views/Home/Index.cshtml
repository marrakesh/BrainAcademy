@using AirportPanelApplication.Models.Enteties
@model List<AirportPanelApplication.Models.Enteties.Flight>
@{
    ViewBag.Title = "Home Page";
}
<div class="col-md-5">
    <div class="border-shadow table-bordered">
        <h4>Heathrow – your journey starts here</h4>
        <p>Welcome to the official airport website</p>
    </div>
    <br/>
    <div class="border-shadow table-bordered">
        <table class="table table-hover table-condensed table-responsive">
            <thead>
            <tr>
                <th>Flight Number</th>
                <th>Origin</th>
                <th>Destination</th>
                <th>Departure time</th>
            </tr>
            </thead>
            @foreach (var flight in Model.Where(f => f.Direction == Direction.Departures))
            {
                <tbody>
                <td>@Html.ActionLink(@flight.FlightNumber, "Details", "Flight", new {id = @flight.Id}, new {@class = "label label-default"})</td>
                <td>@flight.Origin</td>
                <td>@flight.Destination</td>
                <td>@flight.DepartureTime</td>
                </tbody>
            }
        </table>
    </div>
    <br/>
    <div class="border-shadow table-bordered">
        <table class="table table-hover table-condensed table-responsive">
            <thead>
            <tr>
                <th>Flight Number</th>
                <th>Origin</th>
                <th>Destination</th>
                <th>Departure time</th>
            </tr>
            </thead>
            @foreach (var flight in Model.Where(f => f.Direction == Direction.Arrivals))
            {
                <tbody>
                <td>@Html.ActionLink(@flight.FlightNumber, "Details", "Flight", new {id = @flight.Id}, new {@class = "label label-default"})</td>
                <td> @flight.Origin</td>
                <td>@flight.Destination</td>
                <td>@flight.DepartureTime</td>
                </tbody>
            }
        </table>
    </div>
</div>

<div class="col-md-7">
    <div class="border-shadow">
        <a href="http://www.accuweather.com/en/us/new-york-ny/10007/weather-forecast/349727" class="aw-widget-legal"></a>
        <div id="awcc1474926694359" class="aw-widget-current" data-locationkey="" data-unit="c" data-language="en-us" data-useip="true" data-uid="awcc1474926694359"></div>
        <script type="text/javascript" src="http://oap.accuweather.com/launch.js"></script>
    </div>
    <br/>
    <div id="myCarousel" class="carousel slide border-shadow" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <div class="carousel-inner" role="listbox">
            <div class="carousel-inner" role="listbox">
                <div class="item active">
                    <img src="/Content/Image/1.jpg" width="800" height="600">
                    <div class="carousel-caption">
                        <h3>Speed</h3>
                        <p>The best way to get to any location in the world</p>
                    </div>
                </div>

                <div class="item">
                    <img src="/Content/Image/2.jpg" alt="Chicago" width="800" height="600">
                    <div class="carousel-caption">
                        <h3>Safety</h3>
