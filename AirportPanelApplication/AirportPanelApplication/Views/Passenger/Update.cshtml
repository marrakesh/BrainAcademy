                @Html.EditorFor(model => model.PassportSeries, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PassportSeries, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PassportId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PassportId, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PassportId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Birthdate, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.Birthdate, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.Birthdate, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Sex, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EnumDropDownListFor(model => model.Sex, htmlAttributes: new {@class = "form-control"})
                @Html.ValidationMessageFor(model => model.Sex, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Flights, htmlAttributes: new {@class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@foreach (Flight f in ViewBag.Flights)
                {
                    <input type="checkbox" name="selectedCourses" value="@f.Id"
                           @(Model.Flights.Contains(f) ? "checked=\"checked\"" : "") />
                    {
                        @f.FlightNumber @f.Destination
                        
                    }
                    <br />
                }*@
                <table class="table table-hover table-condensed table-bordered border-shadow">
                    <thead>
                        <tr>
                            <th>Checked</th>
                            <th>Flight number</th>
                            <th>Origin</th>
                            <th>Destination</th>
                            <th>Departure time</th>
                            <th>Arrival time</th>
                            <th>Terminal</th>
                        </tr>
                    </thead>

                    @foreach (Flight f in ViewBag.Flights)
                    {
                        <tbody name="selectedCourses" value="@f.Id">
                        <td><input type="checkbox" name="selectedCourses" value="@f.Id"
                        @(Model.Flights.Contains(f) ? "checked=\"checked\"" : "") /></td>
                        <td>@f.FlightNumber</td>
                        <td>@f.Origin</td>
                        <td>@f.Destination</td>
                        <td>@f.DepartureTime</td>
                        <td>@f.ArrivalTime</td>
                        <td>@f.Terminal</td>
                        </tbody>
                    }

                </table>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button class="btn btn-default">
                    <span class="glyphicon glyphicon-arrow-left">
                        @Html.ActionLink(" Back ", "Index", null, new {@class = "black "})
                    </span>
                </button>
                
                <button type="submit" class="btn btn-default">
                    <span class="glyphicon glyphicon-save"></span> Save
                </button>
            </div>
        </div>
